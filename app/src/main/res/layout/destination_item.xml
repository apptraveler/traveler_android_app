<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:background="@drawable/beveled_container"
    android:paddingEnd="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/destination_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/destination_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/destination_image"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/montserrat_regular"
        android:lines="1"
        android:text="@string/destination"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/destination_tags"
        android:fontFamily="@font/montserrat_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_name"
        android:layout_toEndOf="@id/destination_image"
        android:text="@string/destination_tags"
        android:textColor="@color/grey2"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/destinationTourismLevelOne"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/person_enabled" />

        <ImageView
            android:id="@+id/destinationTourismLevelTwo"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/person_enabled" />

        <ImageView
            android:id="@+id/destinationTourismLevelThree"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/person_enabled" />

        <ImageView
            android:id="@+id/destinationTourismLevelFour"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/person_disabled" />

        <ImageView
            android:id="@+id/destinationTourismLevelFive"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/person_disabled" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_tags"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/destination_image"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/expenseLevelOne"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/money_enabled" />

        <ImageView
            android:id="@+id/expenseLevelTwo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/money_enabled" />

        <ImageView
            android:id="@+id/expenseLevelThree"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/money_enabled" />

        <ImageView
            android:id="@+id/expenseLevelFour"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/money_disabled" />

        <ImageView
            android:id="@+id/expenseLevelFive"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/money_disabled" />

        <View
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/beveled_vertical_divider" />

        <ImageView
            android:id="@+id/destination_weather_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sun_1" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/destinationProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_tags"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_forward" />

</RelativeLayout>